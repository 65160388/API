<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
    <link rel="stylesheet" href="/styles/layout.css">
    <link rel="stylesheet" href="/styles/content.css">
    <title>Contact</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <main class="container my-5">
        <h1 class="mb-4 text-center">Contact Me</h1>
        <form action="/submit" method="post" class="w-75 mx-auto">
            <div class="form-group">
                <input type="text" class="form-control feedback-input" name="name" placeholder="Name" required>
            </div>
            <div class="form-group">
                <input type="email" class="form-control feedback-input" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
                <textarea class="form-control feedback-input" name="comment" placeholder="Comment" rows="5" required></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">SUBMIT</button>
            </div>
        </form>
    </main>
    <%- include("partials/footer") %>
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true') {
            alert('Form submitted successfully!');
        }
    </script>
</body>
</html>
